    <version>1.0-SNAPSHOT</version>
    <name>WMS-X Provider</name>
    <url>http://www.myorganization.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>org.jini.maven-jini-plugin</groupId>
                <artifactId>maven-jini-plugin</artifactId>
                <configuration>
                    <securityPolicy>service.policy</securityPolicy>
                    <securityDebug>true</securityDebug>
                    <serviceDebug>false</serviceDebug>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>hu.kfki.grid.wmsx.provider.WmsxProviderServer</mainClass>
                            <addClasspath>true</addClasspath>
                            <addExtensions/>
                            <classpathPrefix/>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.0-20070124.085332-18</version>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>hu.kfki.grid.wmsx.provider.WmsxProviderServer</mainClass>
                            <name>wmsx-provider</name>
                        </program>
                    </programs>
                    <extraJvmArguments>-Djava.security.policy=/home/berger/.m2/repository/org/jini/maven-jini-plugin/resources/jini2_1/policy.all
                        -Djava.rmi.server.codebase=http://127.0.0.1:8123/wmsx-provider-1.0-SNAPSHOT.jar
                    </extraJvmArguments>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>create-repository</goal>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
